<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".setting.view.settingFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_man_avatar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/man"/>
    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        tools:text="mh95568@gmail.com"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/merienda_bold"
        app:layout_constraintTop_toBottomOf="@id/iv_man_avatar"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_backup"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_user_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/backup"
        android:backgroundTint="#419197"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:iconSize="30dp"
        app:icon="@drawable/cloud_upload"
        android:textStyle="bold"
        android:layout_marginTop="60dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_logout"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_backup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/logout"
        android:backgroundTint="#419197"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:iconSize="30dp"
        app:icon="@drawable/logout"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>