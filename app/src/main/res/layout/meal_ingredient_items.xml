<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="150dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_ingredient"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        tools:src="@drawable/background_login"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_measurement"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:text="3 Lps"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_ingredient"
        app:layout_constraintTop_toBottomOf="@+id/iv_ingredient" />

    <TextView
        android:id="@+id/tv_ingredient"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="3 Lps"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#1F1717"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_measurement" />

</androidx.constraintlayout.widget.ConstraintLayout>